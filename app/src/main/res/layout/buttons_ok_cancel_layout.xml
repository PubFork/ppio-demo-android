<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ok_cancel_layout"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal">

    <View
        android:id="@+id/center_view"
        android:layout_width="1dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:background="#DCDFE6" />

    <RelativeLayout
        android:id="@+id/cancel_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@id/center_view">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/cancel"
            android:contentDescription="@string/app_name"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ok_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/center_view">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/ok"
            android:contentDescription="@string/app_name"/>

    </RelativeLayout>

</RelativeLayout>
