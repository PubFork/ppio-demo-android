<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/blockfile_detail_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/background_dialog_header"
        android:text="Detail"
        android:textAllCaps="false"
        android:textColor="#606266"
        android:textSize="16dp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCEFE6"
        android:visibility="gone"/>

    <Button
        android:id="@+id/blockfile_download_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Download"
        android:background="@drawable/background_dialog_header"
        android:textAllCaps="false"
        android:textColor="#606266"
        android:textSize="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCEFE6" />

    <Button
        android:id="@+id/blockfile_share_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:text="Get ShareCode"
        android:textAllCaps="false"
        android:textColor="#606266"
        android:textSize="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCEFE6" />

    <Button
        android:id="@+id/blockfile_rename_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:text="Rename"
        android:textAllCaps="false"
        android:textColor="#606266"
        android:textSize="16dp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCEFE6"
        android:visibility="gone" />

    <Button
        android:id="@+id/blockfile_renew_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:text="Renew"
        android:textAllCaps="false"
        android:textColor="#606266"
        android:textSize="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCEFE6" />

    <Button
        android:id="@+id/blockfile_delete_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:text="Delete"
        android:textAllCaps="false"
        android:textColor="#F56C6C"
        android:textSize="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCEFE6" />

    <Button
        android:id="@+id/blockfile_cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/background_dialog_footer"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="#1989FA"
        android:textSize="16dp" />

</LinearLayout>