<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:text="Feedback"
        android:textColor="#303133"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/description_edittext"
        style="@style/get_edit_style"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="24dp"
        android:cursorVisible="true"
        android:gravity="left"
        android:hint="Please describe the situation you have encountered"
        android:inputType="textMultiLine|text"
        android:paddingStart="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textCursorDrawable="@drawable/drawable_custom_edittext_cursor"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/link_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="24dp"
        android:clickable="true"
        android:text="Join our discord group"
        android:textColor="@color/account_background_blue"
        android:textSize="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="21dp"
        android:background="#DCDFE6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/center_view"
            android:layout_width="1dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:background="#DCDFE6" />

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/center_view"
            android:gravity="center"
            android:text="Cancel"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/submit_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/center_view"
            android:gravity="center"
            android:text="Submit"
            android:textColor="@color/account_background_blue"
            android:textSize="16dp" />
    </RelativeLayout>

</LinearLayout>